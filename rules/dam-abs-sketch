    2h        str+2 

axe       dam=str+1 , pen 0 , abs=dam-2 , finesse 3 , parry-3 , toparry-1 , toavoid+1
    2h        str+4                                             toparry-2 , toavoid+2

spear     dam=str-1 , pen 0 , abs=dam-3 , finesse 3 , parry-1 , reach+1 mod-3
    2h        str+1 ,     1                       4        +1

staff     dam=str-2 , pen 0 , abs=dam+1 , finesse 3 , parry+1 , reach+1 mod-4
    2h        str=0 ,     0                       5        +2

club      dam=str-2 , pen 0 , abs=dam-2 , finesse 1 , parry-2 , toavoid+1 , knockback 1 str+3
    2h        str=0                               2             toavoid+2 , knockback 1 str+6 

bow       dam=str-2 : str-2/3/4 , pen 0/1/2 , range 12/16/18

crossbow  dam=str=0 : str-0/1/2 , pen 1/2/3 , range 10/12/14





